@model ShoppingSystem.Models.Entity.OrderModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4 mb-4">Edit</h1>

<h4 class="mb-2">Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" autocomplete="off" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="CustomerModelId" class="control-label"></label>
                <select asp-for="CustomerModelId" class="form-control form-control-sm" asp-items="ViewBag.CustomerModelId"></select>
                <span asp-validation-for="CustomerModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupermarketModelId" class="control-label"></label>
                <select asp-for="SupermarketModelId" class="form-control form-control-sm" asp-items="ViewBag.SupermarketModelId"></select>
                <span asp-validation-for="SupermarketModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control form-control-sm" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-sm btn-outline-warning border-0" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
