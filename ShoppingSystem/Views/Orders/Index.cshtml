@model IEnumerable<ShoppingSystem.Models.Entity.OrderModel>

@{
    ViewData["Title"] = "Orders";
    OrderModel order = ViewBag.OrderWithDetails;
}

<h1 class="display-4 mb-4">Orders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (order != null && order.OrderDetails != null)
{
    @await Html.PartialAsync("Details", order)
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupermarketModel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerModel.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupermarketModel.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Index" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            @*@if (item.Id == ViewBag.Id)
                {
                    @await Html.PartialAsync("Details", order)
                }*@
        }
    </tbody>
</table>