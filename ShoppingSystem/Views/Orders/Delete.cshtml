@model ShoppingSystem.Models.Entity.OrderModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4 mb-4">Delete</h1>

<h3 class="mb-2">Are you sure you want to delete this?</h3>
<div>
    <h4 class="mb-2">Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerModel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerModel.FirstName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SupermarketModel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupermarketModel.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post" class="form-inline">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger border-0" /> |
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary border-0" role="button">Back to List</a>
    </form>
</div>
