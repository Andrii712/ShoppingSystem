@model ShoppingSystem.Models.Entity.ProductModel

<h4 class="mb-2">Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["Action"]" autocomplete="off" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ID" class="form-control form-control-sm"/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control form-control-sm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control form-control-sm w-50" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["submitBtnHeader"]" class="btn btn-sm btn-outline-warning border-0" />
            </div>
        </form>
    </div>
</div>