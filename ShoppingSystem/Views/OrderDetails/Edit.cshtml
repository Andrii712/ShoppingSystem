@model ShoppingSystem.Models.Entity.OrderDetailsModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4 mb-4">Edit</h1>

<h4 class="mb-2">OrderDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input hidden asp-for="OrderId" class="control-label" value=@Model.OrderId></input>
                @*<select asp-for="OrderId" class="form-control form-control-sm" asp-items="ViewBag.OrderId"></select>*@
                @*<span asp-validation-for="OrderId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control form-control-sm" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-sm btn-outline-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Orders" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
